{config_load file='config/config.conf'}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{#title#}</title>
    <link rel="stylesheet" href="static/css/index/common.css">
    <link rel="stylesheet" href="static/css/index/other.css">
    <style>
        .read{
            float: right;
            margin: 2% 0;
            color: #aaa;
        }
        .read span{
            color: red;
            font-weight: bolder;
        }
        .pagination{
            width: 20%;
            margin: auto;
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
        }
        .pagination a{
            text-decoration: none;
            color: white;
            width: 40px;
            height: 40px;
            line-height: 40px;
            border-radius: 10px;
            margin: 1%;
            background-color:darkcyan;
        }
        .pagination a:hover{
            background-color: cadetblue;
            font-size: 20px;
        }
        .consult-list{
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <nav>
        {include file="app/index/view/header.html"}
    </nav>
    <div class='joinUs-banner' style='background: url(static/img/data/20160802/20160802135948_90702.png ) no-repeat center; position:relative; height:300px;'></div>
            
    <main>
            {nocache}
        <div class="consult-content">
            <div class="consult-content-in">
                {foreach $data as $id=>$contents}
                    {if $id eq 0}
                    <a href="index.php?c=index&a=seek&d=details&id={$contents['Id']}">
                        <div class="consult-list clearfix">
                            <img src={$contents['coverimg']} style="width:270px;height:180px;">
                            <div class="list-right">
                                <h1>【喜讯】{$contents['title']}</h1>
                                <p>
                                    {$contents['smalltitle']}
                                </p>
                                <ul>
                                    <li>发布时间：{$contents['issue']} </li>
                                    <li>阅读全文</li>
                                </ul>
                                <br>
   
                                <div class="read">
                                    阅读量：<span class="readnum">{$contents['readnum']}</span>
                                </div>
            
                            </div>
                        </div>
                    </a>
                    {else}
                    <a href="?c=index&a=seek&id={$contents['Id']}">
                        <div class="consult-list clearfix">
                            <img src={$contents['coverimg']} style="width:270px;height:180px;">
                            <div class="list-right">
                                <h1>{$contents['title']}</h1>
                                <p>
                                    {$contents['smalltitle']}
                                </p>
                                <ul>
                                    <li>发布时间：{$contents['issue']} </li>
                                    <li>阅读全文</li>
                                </ul>
                                <br>
            
                                <div class="read">
                                    阅读量：<span class="readnum"> {$contents['readnum']}</span>
                                </div>
         
                            </div>
                        </div>
                    </a>
                    {/if}
                {/foreach}
            </div>
            <div class="pagination">
                {foreach $pagesList as $page}  
                    <a href="?c=index&a=seek&page={$page}">{$page}</a>
                {/foreach}
            </div>
        </div>
        {/nocache}
    </main>
    <footer>
            {include file="app/index/view/footer.html"}
    </footer>
</body>
<script src="static/js/node_modules/jquery/dist/jquery.min.js"></script>
<script>
</script>
</html>
